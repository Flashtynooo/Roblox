




task.spawn(function()
    local player = game.Players.LocalPlayer

    -- Attente de PlayerGui
    local playerGui
    repeat
        playerGui = player:FindFirstChild("PlayerGui")
        
    until playerGui

    -- Attente de CreditXGui
    local creditGui
    repeat
        creditGui = playerGui:FindFirstChild("CreditXGui")
        
    until creditGui

    -- Recherche du Frame à déplacer (tu peux changer le nom ici si c’est pas MainFrame)
    local targetFrame
    repeat
        targetFrame = creditGui:FindFirstChild("MainFrame", true) -- recherche récursive
        
    until targetFrame

    -- Déplacement (position très loin de l’écran)
    targetFrame.Position = UDim2.new(0.5, -132, 0.5, -1000090)
end)
