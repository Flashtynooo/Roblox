--[[ ðŸ”’ ANTI-FLING by flashtynooo | Ignore ton propre corps ]]
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local LocalPlayer = Players.LocalPlayer
local Character = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()

-- Protection contre fling des AUTRES
local function AntiFling()
	for _, player in pairs(Players:GetPlayers()) do
		if player ~= LocalPlayer and player.Character then
			for _, part in pairs(player.Character:GetDescendants()) do
				if part:IsA("BasePart") then
					-- Supprimer tout effet fling
					part.CanCollide = false
					part.Velocity = Vector3.zero
					part.RotVelocity = Vector3.zero
					part.AssemblyLinearVelocity = Vector3.zero
					part.AssemblyAngularVelocity = Vector3.zero
					
					-- EnlÃ¨ve la physique personnalisÃ©e qui peut fling
					part.CustomPhysicalProperties = PhysicalProperties.new(0, 0, 0)
				end
			end
		end
	end
end

-- Repositionnement d'urgence si ton propre corps vole
local function AutoAnchor()
	if Character and Character:FindFirstChild("HumanoidRootPart") then
		local hrp = Character.HumanoidRootPart
		if hrp.Velocity.Magnitude > 100 then
			hrp.Velocity = Vector3.zero
			hrp.RotVelocity = Vector3.zero
			hrp.CFrame = CFrame.new(0, 10, 0) -- replacer doucement
		end
	end
end

-- Surveillance constante
RunService.Heartbeat:Connect(function()
	pcall(AntiFling)
	pcall(AutoAnchor)
end)

-- Update le personnage si tu respawn
LocalPlayer.CharacterAdded:Connect(function(char)
	Character = char
end)

print("âœ… Anti-Fling ACTIVÃ‰ (autres joueurs seulement)")
