local Player = game.Players.LocalPlayer
local Char = Player.Character or Player.CharacterAdded:Wait()
local Hum = Char:WaitForChild("Humanoid")

-- Animations
local anim1 = Instance.new("Animation")
anim1.AnimationId = "rbxassetid://218504594"

local anim2 = Instance.new("Animation")
anim2.AnimationId = "rbxassetid://218504594"

local track1 = Hum:LoadAnimation(anim1)
local track2 = Hum:LoadAnimation(anim2)

-- Propulsion
local function propelForward()
	local hrp = Char:FindFirstChild("HumanoidRootPart")
	if not hrp then return end

	local bv = Instance.new("BodyVelocity")
	bv.Velocity = hrp.CFrame.LookVector * 80
	bv.MaxForce = Vector3.new(1e5, 0, 1e5)
	bv.P = 1e4
	bv.Parent = hrp

	game.Debris:AddItem(bv, 0.2)
end

-- Animation 1
local function play1()
	local track = track1
	track.Looped = false
	track:Play(0, 1, 0.6)
	track.TimePosition = 0.5

	task.delay(-0.5, function()
		track:AdjustSpeed(0)
		task.delay(0, function()
			track:AdjustSpeed(0.6)
		end)
	end)

	task.delay(-0.5, function()
		track:AdjustSpeed(1.2)
		task.delay(0, function()
			track:AdjustSpeed(0.6)
		end)
	end)

	task.delay(1.5, function()
		track:Stop()
	end)
end

-- Animation 2
local function play2()
	local track = track2
	track.Looped = false
	track:Play(0, 1, 0.6)
	track.TimePosition = 0.1

	task.delay(-0.1, function()
		track:AdjustSpeed(0)
		task.delay(0, function()
			track:AdjustSpeed(0.6)
		end)
	end)

	task.delay(-0.1, function()
		track:AdjustSpeed(1.2)
		task.delay(0, function()
			track:AdjustSpeed(0.6)
		end)
	end)

	task.delay(0.5, function()
		track:Stop()
	end)
end

-- Alterner entre les deux
_G.lastAnim = _G.lastAnim == 1 and 2 or 1

if _G.lastAnim == 1 then
	play1()
else
	play2()
end

-- Propulsion
propelForward()
