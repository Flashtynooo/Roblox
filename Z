local plr = game:GetService("Players").LocalPlayer
local char = plr.Character or plr.CharacterAdded:Wait()
local hum = char:WaitForChild("Humanoid")
local root = char:WaitForChild("HumanoidRootPart")

-- Sauvegarde position d'origine
local originPos = root.Position

-- Animations
local function playAnim(id)
	local anim = Instance.new("Animation")
	anim.AnimationId = "rbxassetid://"..id
	local track = hum:LoadAnimation(anim)
	track:Play()
	return track
end

-- Fonction pour trouver joueur le plus proche
local function getClosestPlayer()
	local minDist = math.huge
	local closest = nil
	for _, other in ipairs(game:GetService("Players"):GetPlayers()) do
		if other ~= plr and other.Character and other.Character:FindFirstChild("HumanoidRootPart") then
			local dist = (other.Character.HumanoidRootPart.Position - root.Position).Magnitude
			if dist < minDist then
				minDist = dist
				closest = other
			end
		end
	end
	return closest
end

-- Lancement
playAnim("74863286")
task.wait(1)
playAnim("184574340")
task.wait(1.5)

local target = getClosestPlayer()
if target and target.Character and target.Character:FindFirstChild("HumanoidRootPart") then
	local targetPos = target.Character.HumanoidRootPart.Position
	root.CFrame = CFrame.new(targetPos + Vector3.new(0, 0, 0)) -- Tp au-dessus du joueur
	task.wait(0.2)
	root.CFrame = CFrame.new(originPos) -- Retour Ã  l'emplacement d'origine
end
