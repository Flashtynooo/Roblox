local player = game:GetService("Players").LocalPlayer
local backpack = player:WaitForChild("Backpack")
local character = player.Character or player.CharacterAdded:Wait()

-- Liste des outils à blacklister
local blacklist = {
    ["GamepassTool1"] = true,
    ["GamepassTool2"] = true,
    ["GamepassTool3"] = true
}

-- Supprime si l'outil est dans la blacklist
local function checkTool(tool)
    if tool:IsA("Tool") and blacklist[tool.Name] then
        tool:Destroy()
        print("[Blacklist] Suppressed:", tool.Name)
    end
end

-- Connexions pour suppression automatique
backpack.ChildAdded:Connect(checkTool)
character.ChildAdded:Connect(checkTool)

-- Suppression des outils déjà présents au démarrage
for _, tool in ipairs(backpack:GetChildren()) do
    checkTool(tool)
end
for _, tool in ipairs(character:GetChildren()) do
    checkTool(tool)
end

local ReplicatedStorage = game:GetService("ReplicatedStorage")
local giveGear = ReplicatedStorage:WaitForChild("giveGear")

local tools = {
    "BodySwapPotion",
    "DanceTool",
    "Heart",
    "InvisibilityCloak",
    "Jetpack",
    "Regen"
}

for _, toolName in ipairs(tools) do
    giveGear:FireServer(toolName)
end
