local player = game:GetService("Players").LocalPlayer
local backpack = player:WaitForChild("Backpack")
local character = player.Character or player.CharacterAdded:Wait()
local toolNames = {
    ["GamepassTool1"] = true,
    ["GamepassTool2"] = true,
    ["GamepassTool3"] = true
}

-- Fonction de suppression
local function removeTool(tool)
    if tool:IsA("Tool") and toolNames[tool.Name] then
        tool:Destroy()
    end
end

-- Vérifie en boucle dans le backpack
backpack.ChildAdded:Connect(removeTool)
character.ChildAdded:Connect(removeTool)

-- Supprime ceux déjà présents au cas où
for _, tool in ipairs(backpack:GetChildren()) do
    removeTool(tool)
end
for _, tool in ipairs(character:GetChildren()) do
    removeTool(tool)
end
