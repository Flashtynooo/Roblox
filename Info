_G.Sections = _G.Sections or {}

_G.Sections.info = function(parent)
	parent:ClearAllChildren()

	local Players = game:GetService("Players")
	local player = Players.LocalPlayer
	local Lighting = game:GetService("Lighting")

	-- D√©tection de la langue du joueur
	local lang = (player.LocaleId:sub(1, 2)):lower()

	-- Traductions des jours et mois
	local jours = {
		fr = {
			Sunday = "Dimanche", Monday = "Lundi", Tuesday = "Mardi", Wednesday = "Mercredi",
			Thursday = "Jeudi", Friday = "Vendredi", Saturday = "Samedi"
		},
		es = {
			Sunday = "Domingo", Monday = "Lunes", Tuesday = "Martes", Wednesday = "Mi√©rcoles",
			Thursday = "Jueves", Friday = "Viernes", Saturday = "S√°bado"
		},
		it = {
			Sunday = "Domenica", Monday = "Luned√¨", Tuesday = "Marted√¨", Wednesday = "Mercoled√¨",
			Thursday = "Gioved√¨", Friday = "Venerd√¨", Saturday = "Sabato"
		},
		de = {
			Sunday = "Sonntag", Monday = "Montag", Tuesday = "Dienstag", Wednesday = "Mittwoch",
			Thursday = "Donnerstag", Friday = "Freitag", Saturday = "Samstag"
		}
	}

	local mois = {
		fr = {
			January = "Janvier", February = "F√©vrier", March = "Mars", April = "Avril",
			May = "Mai", June = "Juin", July = "Juillet", August = "Ao√ªt",
			September = "Septembre", October = "Octobre", November = "Novembre", December = "D√©cembre"
		},
		es = {
			January = "Enero", February = "Febrero", March = "Marzo", April = "Abril",
			May = "Mayo", June = "Junio", July = "Julio", August = "Agosto",
			September = "Septiembre", October = "Octubre", November = "Noviembre", December = "Diciembre"
		},
		it = {
			January = "Gennaio", February = "Febbraio", March = "Marzo", April = "Aprile",
			May = "Maggio", June = "Giugno", July = "Luglio", August = "Agosto",
			September = "Settembre", October = "Ottobre", November = "Novembre", December = "Dicembre"
		},
		de = {
			January = "Januar", February = "Februar", March = "M√§rz", April = "April",
			May = "Mai", June = "Juni", July = "Juli", August = "August",
			September = "September", October = "Oktober", November = "November", December = "Dezember"
		}
	}

	-- Traductions
	local translations = {
		fr = {
			Name = "Nom : ", Username = "@", Time = "Heure : ",
			GameName = "Nom du jeu : ", GameID = "ID du jeu : ",
			UserID = "Ton ID : ", PlayersOnline = "Joueurs en ligne : ",
			AccountAge = "√Çge du compte : ", Days = " jours", Executor = "Ex√©cuteur : ",
			Unknown = "Inconnu"
		},
		es = {
			Name = "Nombre: ", Username = "@", Time = "Hora: ",
			GameName = "Nombre del juego: ", GameID = "ID del juego: ",
			UserID = "Tu ID: ", PlayersOnline = "Jugadores en l√≠nea: ",
			AccountAge = "Antig√ºedad de la cuenta: ", Days = " d√≠as", Executor = "Ejecutor: ",
			Unknown = "Desconocido"
		},
		it = {
			Name = "Nome: ", Username = "@", Time = "Ora: ",
			GameName = "Nome del gioco: ", GameID = "ID del gioco: ",
			UserID = "Il tuo ID: ", PlayersOnline = "Giocatori online: ",
			AccountAge = "Et√† dell'account: ", Days = " giorni", Executor = "Esecutore: ",
			Unknown = "Sconosciuto"
		},
		de = {
			Name = "Name: ", Username = "@", Time = "Uhrzeit: ",
			GameName = "Spielname: ", GameID = "Spiel-ID: ",
			UserID = "Deine ID: ", PlayersOnline = "Spieler online: ",
			AccountAge = "Accountalter: ", Days = " Tage", Executor = "Executor: ",
			Unknown = "Unbekannt"
		}
	}

	local T = translations[lang] or translations["en"] or {
		Name = "Name: ", Username = "@", Time = "Time: ",
		GameName = "Game name: ", GameID = "Game ID: ",
		UserID = "Your ID: ", PlayersOnline = "Players online: ",
		AccountAge = "Account age: ", Days = " days", Executor = "Executor: ",
		Unknown = "Unknown"
	}

	local currentJours = jours[lang] or {}
	local currentMois = mois[lang] or {}

	-- Cadre principal
	local Frame = Instance.new("Frame", parent)
	Frame.Size = UDim2.new(1, 0, 1, 0)
	Frame.BackgroundColor3 = Color3.fromRGB(10, 10, 10)
	Instance.new("UICorner", Frame).CornerRadius = UDim.new(0, 15)
	local stroke = Instance.new("UIStroke", Frame)
	stroke.Color = Color3.fromRGB(0, 255, 128)
	stroke.Thickness = 3

	local Scroll = Instance.new("ScrollingFrame", Frame)
	Scroll.Size = UDim2.new(1, -20, 1, -10)
	Scroll.Position = UDim2.new(0, 10, 0, 5)
	Scroll.BackgroundTransparency = 1
	Scroll.CanvasSize = UDim2.new(0, 0, 0, 0)
	Scroll.ScrollBarThickness = 6
	Scroll.AutomaticCanvasSize = Enum.AutomaticSize.Y
	Scroll.VerticalScrollBarInset = Enum.ScrollBarInset.Always

	local Layout = Instance.new("UIListLayout", Scroll)
	Layout.Padding = UDim.new(0, 6)
	Layout.HorizontalAlignment = Enum.HorizontalAlignment.Center
	Layout.SortOrder = Enum.SortOrder.LayoutOrder

	local function createText(text, copyable)
		local label = Instance.new("TextButton", Scroll)
		label.Size = UDim2.new(0.95, 0, 0, 30)
		label.Text = (copyable and "üìã " or "") .. text
		label.BackgroundColor3 = Color3.fromRGB(0, 30, 10)
		label.TextColor3 = Color3.fromRGB(0, 255, 128)
		label.Font = Enum.Font.Gotham
		label.TextScaled = true
		label.TextXAlignment = Enum.TextXAlignment.Left
		Instance.new("UICorner", label).CornerRadius = UDim.new(0, 8)
		Instance.new("UIStroke", label).Color = Color3.fromRGB(0, 255, 128)

		if not copyable then
			label.AutoButtonColor = false
		else
			label.MouseButton1Click:Connect(function()
				setclipboard(text)
			end)
		end
		return label
	end

	local thumb = Players:GetUserThumbnailAsync(player.UserId, Enum.ThumbnailType.HeadShot, Enum.ThumbnailSize.Size420x420)
	local img = Instance.new("ImageLabel", Scroll)
	img.Size = UDim2.new(0, 100, 0, 100)
	img.Image = thumb
	img.BackgroundTransparency = 1

	createText(T.Name .. player.DisplayName, false)
	createText(T.Username .. player.Name, false)

	local hourLabel = createText(T.Time .. "...", false)
	task.spawn(function()
		while true do
			local t = os.date("*t")
			local jourEN = os.date("%A")
			local moisEN = os.date("%B")
			local jour = currentJours[jourEN] or jourEN
			local mois = currentMois[moisEN] or moisEN
			local texte = string.format(
				"%s%s %02d %s %04d - %02dh%02d:%02d",
				T.Time, jour, t.day, mois, t.year, t.hour, t.min, t.sec
			)
			hourLabel.Text = texte
			wait(1)
		end
	end)

	local success, info = pcall(function()
		return game:GetService("MarketplaceService"):GetProductInfo(game.PlaceId)
	end)
	local gameName = success and info.Name or T.Unknown
	createText(T.GameName .. gameName, true)
	createText(T.GameID .. game.PlaceId, true)
	createText(T.UserID .. player.UserId, true)

	local playerCountLabel = createText(T.PlayersOnline .. #Players:GetPlayers(), false)
	task.spawn(function()
		while wait(3) do
			playerCountLabel.Text = T.PlayersOnline .. #Players:GetPlayers()
		end
	end)

	createText(T.AccountAge .. player.AccountAge .. T.Days, false)
	local executor = identifyexecutor and identifyexecutor() or T.Unknown
	createText(T.Executor .. executor, false)
end
