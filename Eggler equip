local Players = game:GetService("Players")
local BadgeService = game:GetService("BadgeService")
local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()

-- Sons
local function playSound(success)
	local sound = Instance.new("Sound")
	sound.SoundId = success and "rbxassetid://88761861442974" or "rbxassetid://550209561"  -- ID son succès ou erreur
	sound.Volume = 1  -- Son plus fort
	sound.PlayOnRemove = true
	sound.Parent = player:WaitForChild("PlayerGui")
	sound:Play()
	sound:Destroy() -- Joue immédiatement car PlayOnRemove = true
end

-- Message en haut
local function showTemporaryMessage(text)
	local gui = player:WaitForChild("PlayerGui")

	local screenGui = gui:FindFirstChild("flshtyMessageGui") or Instance.new("ScreenGui")
	screenGui.Name = "flshtyMessageGui"
	screenGui.ResetOnSpawn = false
	screenGui.IgnoreGuiInset = true
	screenGui.Parent = gui

	local frame = Instance.new("Frame")
	frame.Size = UDim2.new(0, 320, 0, 40)
	frame.Position = UDim2.new(0.5, -160, 0, 30)
	frame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
	frame.BackgroundTransparency = 0.3
	frame.Parent = screenGui

	local corner = Instance.new("UICorner")
	corner.CornerRadius = UDim.new(0, 10)
	corner.Parent = frame

	local label = Instance.new("TextLabel")
	label.Size = UDim2.new(1, 0, 1, 0)
	label.BackgroundTransparency = 1
	label.Text = text
	label.TextColor3 = Color3.new(1, 1, 1)
	label.TextScaled = true
	label.Font = Enum.Font.Gotham
	label.Parent = frame

	task.wait(3)
	frame:Destroy()
end

-- Vérification badge
local function hasBadge(player, badgeId)
	local success, result = pcall(function()
		return BadgeService:UserHasBadgeAsync(player.UserId, badgeId)
	end)
	return success and result
end

-- Fonction principale
local function equipEggler()
	if not hasBadge(player, 2286252038116816) then
		playSound(false)
wait(0.1)
playSound(false)  -- Son erreur
		showTemporaryMessage("Obtain the 'Egging Over It' badge first")  -- Message en haut
		return
	end

	playSound(true)  -- Son succès

	-- Téléportation vers l'objet
	character:MoveTo(Vector3.new(27, 320, -20))
	task.wait(1.5)

	-- Clique Eggler 3 fois
	local function clickEggler()
		for _, obj in pairs(workspace:GetDescendants()) do
			if obj:IsA("ClickDetector") and obj.Parent and obj.Parent.Name == "Eggler" then
				for i = 1, 3 do
					fireclickdetector(obj)
					task.wait(0.2)
				end
				return true
			end
		end
		return false
	end

	local clicked = clickEggler()
	if clicked then
		task.wait(1)
		character:MoveTo(Vector3.new(-901, 328, -2))
	else
		warn("Objet 'Eggler' non trouvé.")
	end
end

-- Exécution de la fonction
equipEggler()
