-- Minimize / D√©minimiser avec animation de glissement (changement de la taille de main)
local minimizedState = false
local fullSize = UDim2.new(0, 350, 0, 250)
local minimizedSize = UDim2.new(0, 350, 0, 30)
minimize.MouseButton1Click:Connect(function()
    minimizedState = not minimizedState
    minimize.Text = minimizedState and "+" or "-"

    local tweenInfo = TweenInfo.new(0.3, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)
    local targetSize = minimizedState and minimizedSize or fullSize
    TweenService:Create(main, tweenInfo, {Size = targetSize}):Play()

    task.delay(0.1, function()
        -- Cache ou affiche TitleFrame et ButtonsFrame en fonction de l'√©tat
        titleFrame.Visible = not minimizedState
        buttonsFrame.Visible = not minimizedState
    end)
end)

---------------------------------------
-- Effet Matrix ‚Äì cr√©ation de lignes de code anim√©es

local matrixLetters = {"0", "1"}  -- on peut ajouter d'autres caract√®res si d√©sir√©

-- Fonction pour g√©n√©rer une cha√Æne al√©atoire de longueur al√©atoire
local function generateRandomLine()
    local len = math.random(8, 20)
    local str = ""
    for i = 1, len do
        str = str .. matrixLetters[math.random(1, #matrixLetters)]
    end
    return str
end

-- Container pour les lignes Matrix (au sein de matrixFrame)
local matrixContainer = Instance.new("Frame", matrixFrame)
matrixContainer.Name = "MatrixContainer"
matrixContainer.Size = UDim2.new(1,0,1,0)
matrixContainer.BackgroundTransparency = 1
matrixContainer.ClipsDescendants = true
matrixContainer.ZIndex = 0

-- Fonction qui cr√©e et anime une "ligne" Matrix
local function createMatrixLine()
    local line = Instance.new("TextLabel", matrixContainer)
    line.BackgroundTransparency = 1
    line.Size = UDim2.new(1, 0, 0, 20)
    line.Text = generateRandomLine()
    line.Font = Enum.Font.Code
    line.TextSize = 18
    line.TextColor3 = Color3.fromRGB(0, 255, 0)
    line.TextTransparency = 0.3
    line.ZIndex = 0
    
    -- Position de d√©part en haut, avec une position X al√©atoire (optionnel, ici on occupe toute la largeur)
    line.Position = UDim2.new(0, 0, 0, -20)
    
    -- Animation : faire d√©filer du haut vers le bas du matrixContainer
    local duration = math.random(4, 7)
    local tween = TweenService:Create(line, TweenInfo.new(duration, Enum.EasingStyle.Linear), {
        Position = UDim2.new(0, 0, 1, 0)
    })
    tween:Play()
    tween.Completed:Connect(function()
        line:Destroy()
    end)
end

-- Boucle pour g√©n√©rer des lignes Matrix de fa√ßon continue
spawn(function()
    while true do
        createMatrixLine()
        wait(0.2)  -- intervalle entre chaque ligne (ajuster pour l'intensit√© de l'effet)
    end
end)
