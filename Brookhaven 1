-- Boutons menu haut
local function createTopButton(name, text, order)
	local btn = Instance.new("TextButton", topBar)
	btn.Name = name
	btn.Size = UDim2.new(0, 100, 0, 30)
	btn.Position = UDim2.new(1, -110 * order, 0, 2)
	btn.BackgroundColor3 = Color3.fromRGB(200, 0, 200)
	btn.Text = text
	btn.Font = Enum.Font.Arcade
	btn.TextSize = 14
	btn.TextColor3 = Color3.fromRGB(0, 255, 255)
	Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 8)
	return btn
end

local infoBtn = createTopButton("InfoBtn", "‚ÑπÔ∏è Info", 2)
local musicBtn = createTopButton("MusicBtn", "üéµ Music", 1)

