-- TextBox pour ID manuel
local musicIdBox = Instance.new("TextBox", musicPanel)
musicIdBox.Size = UDim2.new(1, -20, 0, 30)
musicIdBox.Position = UDim2.new(0, 10, 0, 40)
musicIdBox.PlaceholderText = "Enter music ID"
musicIdBox.Font = Enum.Font.Gotham
musicIdBox.TextSize = 14
musicIdBox.BackgroundColor3 = Color3.fromRGB(80, 80, 120)
musicIdBox.TextColor3 = Color3.new(1, 1, 1)

-- Bouton play
local playMusic = Instance.new("TextButton", musicPanel)
playMusic.Size = UDim2.new(1, -20, 0, 30)
playMusic.Position = UDim2.new(0, 10, 0, 80)
playMusic.Text = "‚ñ∂Ô∏è Play Custom Music"
playMusic.BackgroundColor3 = Color3.fromRGB(70, 120, 70)
playMusic.Font = Enum.Font.Gotham
playMusic.TextSize = 14
playMusic.TextColor3 = Color3.new(1, 1, 1)

playMusic.MouseButton1Click:Connect(function()
	local id = musicIdBox.Text
	if id ~= "" then
		local args1 = { "PickingScooterMusicText", id }
		local args2 = { "PickingCarMusicText", id }
		local rs = game:GetService("ReplicatedStorage"):WaitForChild("RE")
		rs:WaitForChild("1NoMoto1rVehicle1s"):FireServer(unpack(args1))
		rs:WaitForChild("1Player1sCa1r"):FireServer(unpack(args2))
	end
end)

local predefined = {
    { name = "Doors Ending Theme", id = "103086632976213" },
    { name = "~Obama Boss Fight~", id = "131902818695416" },
    { name = "Ritual Phonk Madness", id = "115175275895587" },
    { name = "Metamorphosis", id = "15689451063" },
    { name = "H.R --EEYUH!", id = "16190782181" },
    { name = "~Deja Vu~", id = "16831106636" },
}


for i, mus in ipairs(predefined) do
	local btn = Instance.new("TextButton", musicPanel)
	btn.Size = UDim2.new(1, -20, 0, 30)
	btn.Position = UDim2.new(0, 10, 0, 120 + (i-1)*35)
	btn.Text = "‚ñ∂Ô∏è " .. mus.name
	btn.BackgroundColor3 = Color3.fromRGB(90, 90, 150)
	btn.Font = Enum.Font.Gotham
	btn.TextSize = 14
	btn.TextColor3 = Color3.new(1, 1, 1)
	
	btn.MouseButton1Click:Connect(function()
		local id = mus.id
		local args1 = { "PickingScooterMusicText", id }
		local args2 = { "PickingCarMusicText", id }
		local rs = game:GetService("ReplicatedStorage"):WaitForChild("RE")
		rs:WaitForChild("1NoMoto1rVehicle1s"):FireServer(unpack(args1))
		rs:WaitForChild("1Player1sCa1r"):FireServer(unpack(args2))
	end)
end

-- Navigation : 1 panneau √† la fois
local function showPanel(name)
	infoPanel.Visible = false
	musicPanel.Visible = false
	if name == "Info" then
		infoPanel.Visible = true
	elseif name == "Music" then
		musicPanel.Visible = true
	end
end

infoBtn.MouseButton1Click:Connect(function()
	showPanel("Info")
end)

musicBtn.MouseButton1Click:Connect(function()
	showPanel("Music")
end)

-- Fonction Resize / Minimize
local isMinimized = false

resizeBtn.MouseButton1Click:Connect(function()
	if isMinimized then
		main.Size = UDim2.new(0, 500, 0, 300)
		content.Size = UDim2.new(1, -20, 1, -40)
		resizeBtn.Text = "‚àí"
		isMinimized = false
	else
		main.Size = UDim2.new(0, 500, 0, 40)
		content.Size = UDim2.new(1, -20, 0, 0)
		resizeBtn.Text = "+"
		isMinimized = true
	end
end)
