title.TextSize = 18
title.TextColor3 = Color3.new(1, 1, 1)
title.TextXAlignment = Enum.TextXAlignment.Left

-- Boutons menu haut
local function createTopButton(name, text, order)
	local btn = Instance.new("TextButton", topBar)
	btn.Name = name
	btn.Size = UDim2.new(0, 100, 0, 30)
	btn.Position = UDim2.new(1, -110 * order, 0, 2)
	btn.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
	btn.Text = text
	btn.Font = Enum.Font.Gotham
	btn.TextSize = 14
	btn.TextColor3 = Color3.new(1, 1, 1)
	return btn
end

local infoBtn = createTopButton("InfoBtn", "‚ÑπÔ∏è Info", 2)
local musicBtn = createTopButton("MusicBtn", "üéµ Music", 1)

-- Bouton Resize/Minimize
