-- Copie du lien Discord
pcall(function()
    setclipboard("https://discord.gg/vnguanfgKw")
end)

-- Notification multilingue
game.StarterGui:SetCore("SendNotification", {
    Title = text.title,
    Text = text.message,
    Duration = 6
})
