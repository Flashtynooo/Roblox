-- Fermeture
closeBtn.MouseButton1Click:Connect(function()
	mainFrame:TweenSize(UDim2.new(0, 300, 0, 50), "Out", "Quad", 0.5, true)
	task.wait(0.5)
	gui:Destroy()
end)

-- R√©duire
shrinkBtn.MouseButton1Click:Connect(function()
	mainFrame:TweenSize(UDim2.new(0, 300, 0, 100), "Out", "Quad", 0.5, true)
end)

-- Agrandir
expandBtn.MouseButton1Click:Connect(function()
	mainFrame:TweenSize(UDim2.new(0, 300, 0, 300), "Out", "Quad", 0.5, true)
end)

-- Son
local sound = Instance.new("Sound", gui)
sound.SoundId = "rbxassetid://6026984224"
sound.Volume = 1

-- Notification
local function showNotification(text)
	local notif = Instance.new("TextLabel")
	notif.Parent = gui
	notif.Size = UDim2.new(0, 300, 0, 30)
	notif.Position = UDim2.new(0.5, -150, 0.05, 0)
	notif.BackgroundColor3 = Color3.fromRGB(255, 100, 100)
	notif.Text = text
	notif.TextColor3 = Color3.new(1, 1, 1)
	notif.Font = Enum.Font.GothamBold
	notif.TextScaled = true
	notif.BorderSizePixel = 0

	sound:Play()

	game:GetService("Debris"):AddItem(notif, 2)
end

-- Modes
local buttonInfos = {
	{Text = "üê£ Baby Mode", Color = Color3.fromRGB(255, 180, 150), Difficulty = "Baby", Count = 13},
	{Text = "ü•ö Easy Mode", Color = Color3.fromRGB(150, 200, 255), Difficulty = "Easy", Count = 18},
	{Text = "ü•ö Medium Mode", Color = Color3.fromRGB(255, 255, 120), Difficulty = "Medium", Count = 23},
	{Text = "üî• Hard Mode", Color = Color3.fromRGB(255, 120, 120), Difficulty = "Hard", Count = 28},
	{Text = "üíÄ Extreme Mode", Color = Color3.fromRGB(180, 100, 255), Difficulty = "Extreme", Count = 38},
}

local used = {}
local inProgress = false

for i, info in ipairs(buttonInfos) do
	local btn = Instance.new("TextButton")
	btn.Parent = controlFrame
	btn.Size = UDim2.new(1, -20, 0, 40)
	btn.Position = UDim2.new(0, 10, 0, (i - 1) * 45 + 5)
	btn.Text = info.Text
	btn.BackgroundColor3 = info.Color
	btn.TextScaled = true
	btn.Font = Enum.Font.GothamBold
	btn.TextColor3 = Color3.new(1, 1, 1)
	btn.BorderSizePixel = 0

	btn.MouseButton1Click:Connect(function()
		if inProgress then
			showNotification("‚õî An action is already in progress, please wait!")
			return
		end
		if used[info.Difficulty] then
			showNotification("‚ùå You have already completed this mode.")
			return
		end

		inProgress = true
		showNotification("‚öôÔ∏è Action in progress... Please wait.")

		local args = { [1] = info.Difficulty }
		game:GetService("ReplicatedStorage"):WaitForChild("Remotes"):WaitForChild("ChangeDifficulty"):FireServer(unpack(args))
		game:GetService("ReplicatedStorage"):WaitForChild("Remotes"):WaitForChild("RequestEggs"):InvokeServer(unpack(args))

		for j = 1, info.Count do
			game:GetService("ReplicatedStorage"):WaitForChild("Remotes"):WaitForChild("EggCollected"):InvokeServer()
			task.wait(0.6)
		end

		inProgress = false
		used[info.Difficulty] = true
		showNotification(info.Difficulty .. " mode completed! You can now go back or choose another mode.")
	end)
end
